{{ form_start(registrationForm) }}
<section class="text-gray-600 body-font">
	<div class="container px-5 py-24 mx-auto flex flex-wrap items-center">
		<div class="lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0">
			<h1 class="title-font font-medium text-3xl text-gray-900">
				Bienvenue sur Mon Blog !
			</h1>
			<p class="leading-relaxed mt-4">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Eius aut ut similique in harum, a dolore fugiat quasi mollitia eaque amet eos ea sit tempore asperiores atque necessitatibus molestias nam.</p>
		</div>
		<div
			class="lg:w-2/6 md:w-1/2 bg-gray-100 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0"
		>
			<h2 class="text-gray-900 text-lg font-medium title-font mb-5">
				S'inscrire
			</h2>
			<div class="relative mb-4">
				{{ form_row(registrationForm.firstName, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'
				}}) }}
			</div>
			<div class="relative mb-4">
				{{ form_row(registrationForm.lastName, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'
				}}) }}
			</div>
			<div class="relative mb-4">
				{{ form_row(registrationForm.email, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'
				}}) }}
			</div>
			<div class="relative mb-4">
				{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
				</div>
				<div class="form-check">
					{{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer mb-4'
				}}) }}
